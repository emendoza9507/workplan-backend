generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id              Int                  @id @default(autoincrement())
  name            String
  lastname        String
  username        String               @unique
  email           String               @unique
  password        String
  profileImage    String?
  avatarImage     String?
  immediateBossId Int?
  createdAt       DateTime             @default(now())
  updatedAt       DateTime             @updatedAt
  Activity        Activity[]
  immediateBoss   User?                @relation("BossWorker", fields: [immediateBossId], references: [id])
  workers         User[]               @relation("BossWorker")
  WorkPlan        WorkPlan[]
  messages        Message[]
  chats           Chat[]
}

model Period {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  mounth    String?
  year      String?
  workplans WorkPlan[]
}

model WorkPlan {
  id          Int        @id @default(autoincrement())
  description String
  authorId    Int
  periodId    Int
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  activites   Activity[]
  period      Period     @relation(fields: [periodId], references: [id])
  author      User       @relation(fields: [authorId], references: [id])
}

model Activity {
  id            Int      @id @default(autoincrement())
  name          String
  workPlanId    Int
  description   String
  date          DateTime
  startTime     String
  endTime       String
  createdBy     Int
  createdByUser User     @relation(fields: [createdBy], references: [id])
  workPlan      WorkPlan @relation(fields: [workPlanId], references: [id])
}

model Message {
  id        Int      @id @default(autoincrement())
  text      String
  senderId  Int
  createdAt DateTime @default(now())
  sender    User     @relation(fields: [senderId], references: [id])
  chatId    Int
  chat      Chat     @relation(fields: [chatId], references: [id])
}

model Chat {
  id           Int                  @id @default(autoincrement())
  participants User[]
  messages      Message[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

